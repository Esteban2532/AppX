<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="10dp"
    android:paddingRight="20dp"
    android:paddingBottom="10dp"
    tools:context=".Fragments.OfertasFragment">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                card_view:cardCornerRadius="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvTituloTarjeta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F0F0F0"
                        android:gravity="center"
                        android:text="SAMSUMG LOCAL 202"
                        android:textColor="@android:color/black"
                        android:textSize="30dp"
                        android:textStyle="bold"

                        />


                    <ImageView
                        android:id="@+id/imagen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvTituloTarjeta"
                        android:src="@drawable/cel" />


                    <TextView
                        android:id="@+id/tvContenidoTarjeta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imagen"
                        android:background="#F0F0F0"
                        android:text="20% DESCUENTO"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                card_view:cardCornerRadius="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvTituloTarjeta2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F0F0F0"
                        android:gravity="center"
                        android:text="NIKE TIENDA 401"
                        android:textColor="@android:color/black"
                        android:textSize="30dp"
                        android:textStyle="bold"

                        />


                    <ImageView
                        android:id="@+id/imagen2"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_below="@+id/tvTituloTarjeta2"
                        android:src="@drawable/depotivo" />


                    <TextView
                        android:id="@+id/tvContenidoTarjeta2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imagen2"
                        android:background="#F0F0F0"
                        android:text="15% DESCUENTO"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                card_view:cardCornerRadius="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvTituloTarjeta1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F0F0F0"
                        android:gravity="center"
                        android:text="BERSKA LOCAL 101"
                        android:textColor="@android:color/black"
                        android:textSize="30dp"
                        android:textStyle="bold"

                        />


                    <ImageView
                        android:id="@+id/imagen1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvTituloTarjeta1"
                        android:src="@drawable/ropa" />


                    <TextView
                        android:id="@+id/tvContenidoTarjeta1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imagen1"
                        android:background="#F0F0F0"
                        android:text="50% DESCUENTO"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                card_view:cardCornerRadius="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvTituloTarjeta3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F0F0F0"
                        android:gravity="center"
                        android:text="AGAVAL LOCAL 101"
                        android:textColor="@android:color/black"
                        android:textSize="30dp"
                        android:textStyle="bold"

                        />


                    <ImageView
                        android:id="@+id/imagen3"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_below="@+id/tvTituloTarjeta3"
                        android:src="@drawable/zapto" />


                    <TextView
                        android:id="@+id/tvContenidoTarjeta3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imagen3"
                        android:background="#F0F0F0"
                        android:text="25% DESCUENTO"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

    </ScrollView>

</LinearLayout>